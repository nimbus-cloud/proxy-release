# abort script on any command that exits with a non zero value
set -e -x

echo "Extracting dante...."

tar xvzf dante/dante-1.4.0.tar.gz
pushd dante-1.4.0
  CPPFLAGS=-I/var/vcap/packages/libpam0g-dev LDFLAGS=-L/var/vcap/packages/libpam0g-dev/lib ./configure \
    --prefix=${BOSH_INSTALL_TARGET}
  make
  make install
popd

